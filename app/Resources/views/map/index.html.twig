    <meta name="twitter:card" content="summary">
    <meta name="twitter:domain" content=""/>
    <meta name="twitter:creator" content="@" />

    <link rel="stylesheet" href="../../../../web/HotspotMap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../../../web/HotspotMap/css/style.css">
