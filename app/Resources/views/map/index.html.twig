<!-- Dynamic add hotspot -->
<script>
    $( "#add-hotspot" ).click(function(e) {
        $("#caract").toggle();
        $("#map-info").toggle();
        $("#save-hotspot").toggle();
        if($("#map").hasClass("view"))
        {
            $("#map").removeClass("view");
            $("#map").addClass("edit");
            $(this).text("cancel");
        }
        else
        {
            $("#map").removeClass("edit");
            $("#map").addClass("view");
            $(this).text("add your hotspot");
        }
    });
</script>

</html>