<?xml version="1.0" encoding="utf-8" ?>
<closest>
    {% for closePlace in data['$closestPlaces'] %}
        <place>
            <name>
                {{ closePlace.name }}
            </name>
            <longitude>
                {{ closePlace.longitude }}
            </longitude>
            <latitude>
                {{ closePlace.latitude }}
            </latitude>
            <address>
                {{ closePlace.address }}
            </address>
            <country>
                {{ closePlace.country }}
            </country>
            <town>
                {{ closePlace.town }}
            </town>
            <website>
                {{ closePlace.website }}
            </website>
            <description>
                {{ closePlace.description }}
            </description>
        </place>
    {% endfor %}
</closest>
<current>
    <place>
        <name>
            {{ place.name }}
        </name>
        <longitude>
            {{ place.longitude }}
        </longitude>
        <latitude>
            {{ place.latitude }}
        </latitude>
        <address>
            {{ place.address }}
        </address>
        <country>
            {{ place.country }}
        </country>
        <town>
            {{ place.town }}
        </town>
        <website>
            {{ place.website }}
        </website>
        <description>
            {{ place.description }}
        </description>
    </place>
</current>
