<html>
    <head>
        <title>Places</title>
    </head>
    <body>
        <h1>Places</h1>
        {% for place in places %}
            <h3>{{ place.name }}</h3>
            <div>
                Address : {{ place.address }}
            </div>
            <div>
                Town : {{ place.town }}
            </div>
            <div>
                Country : {{ place.country }}
            </div>
            <div>
                Position : ({{ place.longitude }}, {{ place.latitude }})
            </div>
            <div>
                Website : {{ place.website }}
            </div>
            <div>
                Description : {{ place.description }}
            </div>
        {% endfor %}
    </body>
</html>
